            <ListView Background="Transparent" BorderThickness="0" Name="ListView" HorizontalAlignment="Left" Height="200" Margin="315,220,0,0" VerticalAlignment="Top" Width="160">
                <ListView.View>
                    <GridView AllowsColumnReorder="False">
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="IsHitTestVisible" Value="False"/>
                                <Setter Property="FontFamily" Value="Lucida Sans" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Left" />
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn Width="100" Header="Hour" DisplayMemberBinding="{Binding HourDisplay}" />
                        <GridViewColumn Width="50" Header="Remove" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <!--Image VerticalAlignment="Center" PreviewMouseLeftButtonUp="RemoveRegistry" RenderOptions.BitmapScalingMode="HighQuality" Stretch="Uniform" Width="30" Height="30" Source="{Binding Image}" /-->
                                    <materialDesign:PackIcon PreviewMouseLeftButtonUp="RemoveRegistry" Kind="RemoveCircle" Height="25" Width="25" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Margin="19,161,526,211">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock FontSize="20" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" FontStretch="Expanded" x:Name="baseShiftTime" >
                <TextBlock FontFamily="Lucida Sans" >Shift time: </TextBlock>
                    
                <!--TextBlock FontFamily="Lucida Sans" Text="{Binding BaseShiftTime}"></-->
            </TextBlock>
                    <RadioButton FontSize="16" FontWeight="Bold" Name="BtnSixHours" GroupName="Shift" IsChecked="True" Content="6h" HorizontalAlignment="Center" VerticalAlignment="Center" Click="UpdateShiftTime" />
                    <RadioButton FontSize="16" FontWeight="Bold" Name="BtnEightHours" GroupName="Shift" Content="8h48min" HorizontalAlignment="Center" VerticalAlignment="Center" Click="UpdateShiftTime" />
                </StackPanel>
                <TextBlock FontSize="20" TextAlignment="Center" FontStretch="Expanded" FontWeight="ExtraBold" HorizontalAlignment="Stretch" VerticalAlignment="Top" x:Name="endShiftTimeTextBlock">
                <TextBlock FontFamily="Lucida Sans">Time to leave:  </TextBlock>
                <TextBlock FontFamily="Lucida Sans" Text="{Binding EndShiftTime}"></TextBlock>
            </TextBlock>
            </StackPanel>

            <StackPanel Margin="350, 130, 350, 260">
                <TextBlock Text="{Binding HourDisplay}" FontSize="18" TextAlignment="Center" FontStretch="Expanded" FontWeight="ExtraBold" HorizontalAlignment="Stretch" VerticalAlignment="Center" x:Name="HourTextBlock" Height="31" FontFamily="Lucida Sans" />
            </StackPanel>

            <Button Content="Add Registry" HorizontalAlignment="Left" Margin="535,105,0,0" VerticalAlignment="Top" Height="40" Width="100" Click="AddHourRestry" FontFamily="Lucida Sans"/>
            <Button Margin="406,64,356,355" Background="{x:Null}" BorderBrush="{x:Null}">
            </Button>
            <Button x:Uid="UpMinute" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="406,100,0,0" VerticalAlignment="Top" Width="38" Height="30" Click="Button_Click" >
                <materialDesign:PackIcon Kind="ArrowUpThick" Height="25" Width="25" />
            </Button>
            <Button x:Uid="DownMinute" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="406,161,0,0" VerticalAlignment="Top" Width="38" Height="31" Click="Button_Click">
                <materialDesign:PackIcon Kind="ArrowDownThick" Height="25" Width="25" />
            </Button>

            <Button x:Uid="UpHour" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="350,100,0,0" VerticalAlignment="Top" Width="38" Height="30" Click="Button_Click">
                <materialDesign:PackIcon Kind="ArrowUpThick" Height="25" Width="25" />
            </Button>
            <Button x:Uid="DownHour" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="350,161,0,0" VerticalAlignment="Top" Width="38" Height="31" Click="Button_Click">
                <materialDesign:PackIcon Kind="ArrowDownThick" Height="25" Width="25" />
            </Button>
            <Button Content="Reset" Height="40" Width="100" HorizontalAlignment="Left" Margin="535,152,0,0"  VerticalAlignment="Top" Click="ResetSettings" FontFamily="Lucida Sans" />
            <CheckBox IsChecked="True" Name="BaseLunchTime" Content="Consider Lunch Time as 1h" FontFamily="Lucida Sans" VerticalContentAlignment="Bottom" Checked="AddLunchTime" Unchecked="AddLunchTime" HorizontalAlignment="Left" Margin="66,118,0,0" VerticalAlignment="Top"/>

        </Grid>
    </Grid>
