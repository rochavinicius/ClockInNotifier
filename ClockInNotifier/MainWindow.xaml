<Window x:Class="ClockInNotifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" Icon="clock_icon.ico"
        ResizeMode="NoResize"
        Closing="OnClosing"
        Title=""
        WindowStyle="None"
        Loaded="OnLoaded"
        
        WindowStartupLocation="CenterScreen"
        Background="Gray" Height="450" Width="800">
    <Grid Background="White">

        <StackPanel MouseDown="Grid_MouseDown">
            <Grid Background="DodgerBlue" Height="15"></Grid>
            <Grid Margin="5">
                <TextBlock Text="Clock In Notifier" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="Lucida Sans" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnMinimize" Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Click="BtnMinimize_Click">
                        <materialDesign:PackIcon Kind="WindowMinimize" />
                    </Button>
                    <Button x:Name="BtnQuit" Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Click="BtnQuit_Click">
                        <materialDesign:PackIcon Kind="Power" />
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>

        <Grid>
